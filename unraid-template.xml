<?xml version="1.0"?>
<Container version="2">
  <Name>DotNet-MSSQL-Docker</Name>
  <Repository>nilsree/dotnet-mssql-docker</Repository>
  <Registry>https://hub.docker.com/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/nilsree/dotnet-mssql-docker</Support>
  <Project>https://github.com/nilsree/dotnet-mssql-docker</Project>
  <Overview>Docker container that runs a .NET application with MSSQL Server database. Perfect for hosting .NET web applications with integrated database on Unraid.</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:80]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/nilsree/dotnet-mssql-docker/main/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/nilsree/dotnet-mssql-docker/main/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1642464000</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>Docker container that runs a .NET application with MSSQL Server database. Perfect for hosting .NET web applications with integrated database on Unraid.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>8443</HostPort>
        <ContainerPort>443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>1433</HostPort>
        <ContainerPort>1433</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/dotnet-mssql-docker/data</HostDir>
      <ContainerDir>/var/opt/mssql/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/dotnet-mssql-docker/log</HostDir>
      <ContainerDir>/var/opt/mssql/log</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/dotnet-mssql-docker/backup</HostDir>
      <ContainerDir>/var/opt/mssql/backup</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/dotnet-mssql-docker/init-scripts</HostDir>
      <ContainerDir>/docker-entrypoint-initdb.d</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>YourStrong@Passw0rd123</Value>
      <Name>SA_PASSWORD</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Y</Value>
      <Name>ACCEPT_EULA</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Express</Value>
      <Name>MSSQL_PID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Production</Value>
      <Name>DOTNET_ENVIRONMENT</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Production</Value>
      <Name>ASPNETCORE_ENVIRONMENT</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>http://+:80</Value>
      <Name>ASPNETCORE_URLS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Server=localhost;Database=YourDatabase;User Id=sa;Password=YourStrong@Passw0rd123;TrustServerCertificate=true;</Value>
      <Name>ConnectionStrings__DefaultConnection</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>CUSTOM_VAR_1</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>CUSTOM_VAR_2</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>false</Value>
      <Name>ENABLE_CI_CD</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>GITHUB_REPO</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>main</Value>
      <Name>GITHUB_BRANCH</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>GITHUB_DEPLOY_KEY</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>60</Value>
      <Name>POLL_INTERVAL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>deploy.sh</Value>
      <Name>BUILD_SCRIPT</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>true</Value>
      <Name>ENABLE_AUTO_BUILD</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Web UI Port" Target="80" Default="8080" Mode="tcp" Description="Port for accessing the web application" Type="Port" Display="always" Required="false" Mask="false"/>
  <Config Name="HTTPS Port" Target="443" Default="8443" Mode="tcp" Description="HTTPS port for the web application" Type="Port" Display="always" Required="false" Mask="false"/>
  <Config Name="SQL Server Port" Target="1433" Default="1433" Mode="tcp" Description="SQL Server database port" Type="Port" Display="always" Required="false" Mask="false"/>
  <Config Name="SQL Data Volume" Target="/var/opt/mssql/data" Default="/mnt/user/appdata/dotnet-mssql-docker/data" Mode="rw" Description="Volume for SQL Server data files" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="SQL Log Volume" Target="/var/opt/mssql/log" Default="/mnt/user/appdata/dotnet-mssql-docker/log" Mode="rw" Description="Volume for SQL Server log files" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="SQL Backup Volume" Target="/var/opt/mssql/backup" Default="/mnt/user/appdata/dotnet-mssql-docker/backup" Mode="rw" Description="Volume for SQL Server backup files" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Init Scripts Volume" Target="/docker-entrypoint-initdb.d" Default="/mnt/user/appdata/dotnet-mssql-docker/init-scripts" Mode="ro" Description="Volume for SQL initialization scripts" Type="Path" Display="always" Required="false" Mask="false"/>
  <Config Name="SA Password" Target="SA_PASSWORD" Default="" Mode="" Description="SQL Server SA user password (minimum 8 characters, required)" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="Accept EULA" Target="ACCEPT_EULA" Default="Y" Mode="" Description="Accept SQL Server EULA" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="SQL Server Edition" Target="MSSQL_PID" Default="Express" Mode="" Description="SQL Server edition (Express, Developer, Standard, Enterprise)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="DOTNET Environment" Target="DOTNET_ENVIRONMENT" Default="Production" Mode="" Description=".NET application environment" Type="Variable" Display="always" Required="true" Mask="false">
    <Option>Production</Option>
    <Option>Test</Option>
    <Option>Development</Option>
  </Config>
  <Config Name="ASP.NET Core Environment" Target="ASPNETCORE_ENVIRONMENT" Default="Production" Mode="" Description="ASP.NET Core environment" Type="Variable" Display="always" Required="true" Mask="false">
    <Option>Production</Option>
    <Option>Test</Option>
    <Option>Development</Option>
  </Config>
  <Config Name="ASP.NET Core URLs" Target="ASPNETCORE_URLS" Default="http://+:80" Mode="" Description="ASP.NET Core listening URLs" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Connection String" Target="ConnectionStrings__DefaultConnection" Default="Server=localhost;Database=YourDatabase;User Id=sa;Password=SET_SA_PASSWORD_ABOVE;TrustServerCertificate=true;" Mode="" Description="Default database connection string (update password to match SA_PASSWORD)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Custom Variable 1" Target="CUSTOM_VAR_1" Default="" Mode="" Description="Custom environment variable for your application" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Custom Variable 2" Target="CUSTOM_VAR_2" Default="" Mode="" Description="Custom environment variable for your application" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Enable CI/CD" Target="ENABLE_CI_CD" Default="false" Mode="" Description="Enable automatic deployment from GitHub" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="GitHub Repository" Target="GITHUB_REPO" Default="" Mode="" Description="GitHub repository in format: owner/repo" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="GitHub Branch" Target="GITHUB_BRANCH" Default="main" Mode="" Description="GitHub branch to monitor for changes" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="GitHub Deploy Key" Target="GITHUB_DEPLOY_KEY" Default="" Mode="" Description="GitHub deploy key (SSH private key) for repository access" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Poll Interval" Target="POLL_INTERVAL" Default="60" Mode="" Description="Interval in seconds to check for repository updates" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Build Script" Target="BUILD_SCRIPT" Default="deploy.sh" Mode="" Description="Build script to run after code update" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Enable Auto Build" Target="ENABLE_AUTO_BUILD" Default="true" Mode="" Description="Enable automatic build after code update" Type="Variable" Display="always" Required="false" Mask="false"/>
</Container>
